@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "Register";
}

<div class="container p-1">
<h1>@ViewData["Title"]</h1>
<h2 id="external-login-title">Associate your @Model.ProviderDisplayName account.</h2>
<hr />

<p id="external-login-description" class="text-info">
    You've successfully authenticated with <strong>@Model.ProviderDisplayName</strong>.
    Please enter an email address for this site below and click the Register button to finish
    logging in.
</p>
<style>
    import 'https://fonts.googleapis.com/css?family=Poppins:900';

html,
body {
  
    background-color: #f5f5f5;
}

body {
    color: #2e3234;
}

h1 {
    font-family: 'Poppins', sans-serif;
}

.input-lg {
    font-size: 16px;
}

.form-control {
    border: 1px solid #ccc;
    box-shadow: none;
    border-radius: 3px;
}

.form-control:focus {
    box-shadow: none;
    border-style: solid;
}

#loading {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    background: rgba(250,250,250,.975);
    margin: 20% auto;
    z-index: 1;
    padding: 25px;
    text-align: center;
    height: 90px;
}

.splash__page {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    height: 100%;
    width: 100%;
    background-color: #f5f5f5;
    /*background: linear-gradient(180deg,rgba(0,105,255,.6),#0069ff);*/
}

.login__box {
    background-color: #fff;
    padding: 25px;
    box-shadow: 0 0 20px rgba(54, 54, 54, .3);
}

.login__box img {
    display: table;
    margin: 0 auto;
}

.login__box h3 {
    margin-bottom: 20px;
}

media screen and (min-width: 1440px) {
    .login__box {
        margin: 250px auto;
    }
}

.register__box {
    background-color: #fff;
    padding: 25px;
    box-shadow: 0 0 20px rgba(54, 54, 54, .3);
}

.register__box h1 {
    margin-bottom: 30px;
}

media screen and (min-width: 1441px) {
    .register__box {
        margin: 150px auto;
    }
}

media screen and (min-width: 320px) and (max-width: 1440px) {
    .register__box {
        margin: 30px auto;
    }
}

.accent__color {
    color: #0069ff;
}

.btn {
    font-size: 16px;
    border-radius: 3px;
}

.btn-primary {
    border: none;
    background-color: #0069ff;
    color: #fff;
}

.btn-primary:hover,
.btn-primary:focus {
    border: none;
    background-color: #005fe6;
    color: #fff;
}
</style>

