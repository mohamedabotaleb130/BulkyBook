@model Company

<form method="post" asp-action="Upsert" enctype="multipart/form-data">
	<input asp-for="Id" hidden />
	<div class="container p-2">
		<div class="row">
		<div class="col-10">
			<div class="border p-3 mt-4 row">
				<div class="col-12 pb-2">
						<h1 class="text-primary"><i class="fa-solid fa-arrows-rotate"></i>@(Model.Id != 0 ? "Update" : "Create")  Company<i class="fa-solid fa-building"></i></h1>
					<hr />
				</div>
				@*<div asp-validation-summary="All"></div>*@
				<div class="mb-3">
					<label asp-for="Name"></label>
					<input asp-for="Name" class="form-control" />
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>
				<div class="mb-3">
					<label asp-for="PhoneNumber"></label>
					<input asp-for="PhoneNumber" class="form-control" />
					<span asp-validation-for="PhoneNumber" class="text-danger"></span>
				</div>
				<div class="mb-3">
					<label asp-for="StreetAddress"></label>
					<input asp-for="StreetAddress" class="form-control" />
					<span asp-validation-for="StreetAddress" class="text-danger"></span>
				</div>
				<div class="mb-3">
					<label asp-for="City"></label>
					<input asp-for="City" class="form-control" />
					<span asp-validation-for="City" class="text-danger"></span>
				</div>
				<div class="mb-3">
					<label asp-for="State"></label>
					<input asp-for="State" class="form-control" />
					<span asp-validation-for="State" class="text-danger"></span>
				</div>
				<div class="mb-3">
					<label asp-for="PostalCode"></label>
					<input asp-for="PostalCode" class="form-control" />
					<span asp-validation-for="PostalCode" class="text-danger"></span>
				</div>

				<div class="col-12">
					@if (Model.Id != 0)
					{
							<button type="submit" class="btn btn-primary" style="width:150px"><i class="fa-solid fa-pen-to-square"></i>Update</button>
					}
					else
					{
							<button type="submit" class="btn btn-primary" style="width:150px"><i class="bi bi-plus-circle"></i>Create</button>
					}
					<a asp-controller="Company" asp-action="Index" class="btn btn-secondary" style="width:150px">
							Back to List<i class="bi bi-arrow-up-left-circle-fill"></i>
					</a>
				</div>

			</div>
		</div>

	</div>
	</div>
</form>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}