@model Category

<form method="post" asp-action="Edit">
	<div class=" container p-3"
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h1 class="text-primary"><i class="fa-solid fa-pen-to-square"></i>Edit Category</h1>
			<hr />
		</div>
		@*<div asp-validation-summary="All"></div>*@
		<div class="mb-3">
			<i class="bi bi-person-fill"></i>
			<label asp-for="Name"></label>
			<input asp-for="Name" class="form-control" />
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="DisplayOrder"></label>
			<input asp-for="DisplayOrder" class="form-control" />
			<span asp-validation-for="DisplayOrder" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-primary" style="width:150px"><i class="fa-solid fa-arrows-rotate"></i>Update</button>
		<a asp-controller="Category" asp-action="Index" class="btn btn-danger" style="width:150px">
			Back to List<i class="fa-solid fa-circle-left"></i>
		</a>
	</div>
	</div>
</form>
	
@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}
</div>