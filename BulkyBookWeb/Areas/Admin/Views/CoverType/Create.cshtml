@model CoverType

<form method="post">
	<div class="container p-3"
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h1 class="text-primary"><i class="bi bi-plus-circle-fill"></i>Create CoverType</h1>
			<hr />
		</div>
		@*<div asp-validation-summary="All"></div>*@
		<div class="mb-3">
			<label asp-for="Name"></label>
			<input asp-for="Name" class="form-control" />
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>

		<button type="submit" class="btn btn-primary" style="width:150px"><i class="fa-solid fa-plus"></i>Create</button>
		<a asp-controller="CoverType" asp-action="Index" class="btn btn-secondary" style="width:150px">
			Back to List<i class="fa-solid fa-circle-left"></i>
		</a>
	</div>
	</div>
</form>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}